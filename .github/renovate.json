{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "github>int128/typescript-action-renovate-config#v1.10.0",
    ":automergeMinor",
    ":reviewer(team:sre-jp)"
  ],
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 10am and before 3pm on Monday"
  ],
  "minimumReleaseAge": "7 days",
  "labels": [
    "renovate",
    "renovate/{{depName}}",
    "{{packageFileDir}}"
  ],
  "packageRules": [
    {
      "description": "Split updates per action",
      "matchFileNames": [
        "*/**"
      ],
      "additionalBranchPrefix": "{{packageFileDir}}-",
      "commitMessageSuffix": "({{packageFileDir}})",
      "matchPackageNames": [
        "!node",
        "!@types/node",
        "!@actions/*",
        "!pnpm"
      ]
    },
    {
      "description": "Do not update the dependencies of @actions/github. See https://github.com/quipper/monorepo-deploy-actions/pull/1362",
      "matchPackageNames": [
        "@octokit/core",
        "@octokit/plugin-retry"
      ],
      "enabled": false
    }
  ]
}
