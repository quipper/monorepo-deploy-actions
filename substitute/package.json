{
  "name": "substitute",
  "version": "0.0.0",
  "private": true,
  "main": "lib/src/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "ci:package": "yarn build && yarn package"
  },
  "dependencies": {
    "@actions/core": "1.8.2",
    "@actions/glob": "0.3.0"
  }
}
